{% extends 'base.html.twig' %}

{% block title_h1 %} Lista klientów{% endblock %} 

{% block body %}
    
    <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
            <tr>
              <th>ID</th>
              <th>Imię</th>
              <th>Nazwisko</th>
              <th>Pesel</th>
              <th>Opcje</th>
            </tr>
          
            {% for client in clients %}
                <tr>
                    <td>{{ client.id }}</td>
                    <td>{{ client.firstName }}</td>
                    <td>{{ client.lastName }}</td>
                    <td>{{ client.pesel }}</td>
                    <td>
                        {#<a href="{{ path('client_show', {'slug': agreement.slug }) }}" class="btn btn-info">Pokaż</a>
                        <a href="" class="btn btn-danger">Usuń</a>#}
                    </td>
                </tr>
            {% endfor %}
          
        </table>
    </div>
            
{% endblock %}